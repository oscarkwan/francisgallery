            "id": "contact_text",
            "label": {
                "en": "Contact text"
            }
        },
        {
            "type": "richtext",
            "id": "contact_text_2",
            "label": {
                "en": "Contact text 2"
            }
        },
        {
            "type": "richtext",
            "id": "contact_text_3",
            "label": {
                "en": "Contact text 3"

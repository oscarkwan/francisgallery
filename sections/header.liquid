{% if template.name == 'collection' %}
<div class="filter-artist-nav">
  <div class="close-by-artist">
    <a id="close-artist-nav">Close</a>
  </div>
  <ul>
    {% for collection in collections %}
      {% if collection.title == 'Featured Collection' or collection.title == 'All Products' %}
      {% else %}
      <a href="{{ collection.url }}">
        <li class="collection-list-item">
          <span class="collectionSuffix">{{ collection.title | split: ':' | last }}</span>
          <span class="collectionTitle">{{ collection.title | split: ':' | first }}</span>
        </li>
      </a>
      {% endif %}
    {% endfor %}
  </ul>
</div>
<div class="filter-category-nav">
  <div class="close-by-category">
    <a id="close-category-nav">Close</a>
  </div>
  <ul>
    <a href="/collections/types?q=Original%20Works" class="collection-category">
      <li class="collection-list-item">
        <span class="collectionTitle">Original Works</span>
      </li>
    </a>
    <a href="/collections/types?q=Furniture" class="collection-category">
      <li class="collection-list-item">
        <span class="collectionTitle">Furniture</span>
      </li>
    </a>
    <a href="/collections/types?q=Limited%20Editions" class="collection-category">
      <li class="collection-list-item">
        <span class="collectionTitle">Limited Editions</span>
      </li>
    </a>
    <a href="/collections/types?q=Antiques" class="collection-category">
      <li class="collection-list-item">
        <span class="collectionTitle">Antiques</span>
      </li>
    </a>
  </ul>
</div>
{% endif %}

<div class="francis-logo-right">
  <a><h1>Francis<img src="{{ 'francis-x.svg' | file_url }}" /></h1></a>
</div>

<div data-section-id="{{ section.id }}" data-section-type="header-section" class="{% if template == 'index' %}header-flex{% endif %}">
  <header class="site-header {% if template.name == 'product' %}product-header{% endif %}" role="banner">
    <div class="site-header__logo-menu">
      <a href="/"><p>Francis Gallery curates works by emerging international artists, in a setting informed by Korean aesthetics.</p></a>
      <a class="menu-ham" href="#">{% if template.name == 'collection' or template.name == 'cart' %}
      <div class="site-header__logo-hamburger" style="color: white">Menu
        <div id="nav-icon3">
          <span style="background: white"></span>
          <span style="background: white"></span>
          <span style="background: white"></span>
          <span style="background: white"></span>
        </div>
      </div>{% else %}
      <div class="site-header__logo-hamburger">Menu
      <div id="nav-icon3">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </div></div>{% endif %}</a>
    </div>
    <nav class="menu-ham-nav">
      {% include 'site-nav' %}
      <div class="cart-text">
        <a href="/cart"><span>Bag ({{ cart.item_count }})</span></a>
      </div>
    </nav>
    {% if template.name == 'product' %}
    <script>
    $(document).ready(function($) {
      var hrefCategory = $(".header-product-right span a").attr("href");
      $(".header-product-right a").attr("href", hrefCategory);
    });
    </script>
    <div class="header-product-right">
      <a>      </a>
        <img src="{{ 'arrow-left-grey.svg' | file_url }}" />
        <span>{{ product.type | link_to_type | prepend: 'Back to '}}</span>
    </div>
    {% endif %}
  </header>
  {% if template.name == 'index' %}
  <div class="homepage-header-right" style="background: url({{ section.settings.header_right_image | img_url: 'master' }}); background-size: contain; background-repeat: no-repeat; background-position: right;">
  </div>
  {% endif %}
</div>
